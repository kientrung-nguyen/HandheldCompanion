<common:GamepadWindow
    x:Class="HandheldCompanion.Views.Windows.OverlayQuickTools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:HandheldCompanion.Views.Classes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:l="clr-namespace:HandheldCompanion.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:HandheldCompanion.Properties"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:viewmodels="clr-namespace:HandheldCompanion.ViewModels"
    Title="QuickTools"
    Width="450"
    MinWidth="450"
    MaxWidth="960"
    MaxHeight="960"
    Margin="12,12,12,59"
    d:DataContext="{d:DesignInstance Type=viewmodels:OverlayQuickToolsViewModel}"
    d:Height="450"
    ui:ThemeManager.IsThemeAware="True"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.ApplyNoise="{Binding QuickToolsApplyNoise, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closing="Window_Closing"
    IsVisibleChanged="GamepadWindow_IsVisibleChanged"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    ShowActivated="False"
    ShowInTaskbar="False"
    SnapsToDevicePixels="True"
    Topmost="True"
    UseLayoutRounding="True"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">

    <Window.Resources>
        <sys:Double x:Key="SettingsCardWrapThreshold">286</sys:Double>
        <sys:Double x:Key="SettingsCardWrapNoIconThreshold">286</sys:Double>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36" />
            <RowDefinition Height="90" />
            <RowDefinition Height="320*" />
        </Grid.RowDefinitions>
        <DockPanel
            Grid.Row="0"
            VerticalAlignment="Stretch">
            <Border>
                <Grid Margin="0,0,50,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        Margin="14,0,0,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <!--<Grid>
                            <ui:FontIcon
                                Name="WifiIcon"
                                Width="24"
                                FontSize="15"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Glyph="&#xe874;" />
                        </Grid>
                        <Grid>
                            <ui:FontIcon
                                Name="BluetoothIcon"
                                Width="24"
                                FontSize="15"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Glyph="&#xe702;" />
                        </Grid>-->
                        <TextBlock
                            Name="Time"
                            Margin="0,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="13" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <StackPanel Name="BatteryLifePanel" Margin="4,0,0,0" VerticalAlignment="Center" Orientation="Horizontal">
                            <StackPanel 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    Name="BatteryPower"
                                    VerticalAlignment="Center"
                                    Text="5W"
                                    FontWeight="Bold"
                                    FontSize="13" />
                                <ui:FontIcon
                                    Margin="4,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="13"
                                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                    Glyph="&#xe945;" />
                            </StackPanel>
                            <StackPanel 
                                Margin="4,0,0,0" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    Name="BatteryIndicatorLife"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    FontSize="13" />
                                <TextBlock
                                    Name="BatteryIndicatorLifeRemaining"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="13" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Margin="8,0,0,0" VerticalAlignment="Center" Orientation="Horizontal">
                            <Grid>
                                <ui:FontIcon 
                                    Name="BatteryIndicatorIcon"
                                    Width="30"
                                    FontSize="26"
                                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                    Glyph="&#xE83F;" />
                            </Grid>
                            <StackPanel 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    Name="BatteryIndicatorPercentage"
                                    VerticalAlignment="Center"
                                    FontSize="13" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </DockPanel>
        <DockPanel
            Grid.Row="1"
            VerticalAlignment="Stretch">
            <Border CornerRadius="{DynamicResource ControlCornerRadius}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel 
                        Grid.Column="0"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height=".8*" />
                                <RowDefinition Height="2*" />
                            </Grid.RowDefinitions>
                            <Grid
                                Grid.Row="0"
                                Grid.Column="0">
                                <Border
                                    Padding="0,4,0,4"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    CornerRadius="{StaticResource ControlCornerRadius}">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Name="BatteryDesignCapacity"
                                        Text="Battery"
                                        FontStretch="SemiCondensed" />
                                </Border>
                            </Grid>
                            <ikw:SimpleStackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                Spacing="12"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Grid Margin="0,0,0,0">
                                        <ui:FontIcon
                                            Width="26"
                                            Height="30"
                                            FontSize="16"
                                            Name="BatteryHealthIndicatorIcon"
                                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                            Glyph="&#xf5fc;" />
                                        <ui:ProgressRing
                                            Width="30"
                                            Height="30"
                                            StrokeThickness="2"
                                            Name="BatteryHealthRing"
                                            d:Value="50"
                                            IsIndeterminate="False" />
                                    </Grid>
                                    <StackPanel MinWidth="32" HorizontalAlignment="Center" Orientation="Vertical">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Name="BatteryHealth"
                                            Text="98%"
                                            FontSize="12"
                                            MinWidth="20" Padding="0,4,0,4" />
                                    </StackPanel>
                                </StackPanel>
                            </ikw:SimpleStackPanel>
                        </Grid>
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height=".8*" />
                                <RowDefinition Height="2*" />
                            </Grid.RowDefinitions>
                            <Grid
                                Grid.Row="0"
                                Grid.Column="0">
                                <Border
                                    Padding="0,4,0,4"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    CornerRadius="{StaticResource ControlCornerRadius}">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Name="CPUName"
                                        Text="CPU"
                                        FontStretch="SemiCondensed" />
                                </Border>
                            </Grid>
                            <ikw:SimpleStackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                Spacing="12"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Grid Margin="0,0,0,0">
                                        <ui:FontIcon
                                            Width="26"
                                            Height="30"
                                            FontSize="16"
                                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                            Glyph="&#xe945;" />
                                    </Grid>
                                    <DockPanel MinWidth="32" HorizontalAlignment="Center">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Name="CPUPower"
                                            Text="5W"
                                            FontSize="12"
                                            MinWidth="20" Padding="0,4,0,4" />
                                    </DockPanel>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <Grid Margin="0,0,0,0">
                                        <ui:FontIcon
                                            Width="26"
                                            Height="30"
                                            FontSize="16"
                                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                            Glyph="&#xe9ca;" />
                                    </Grid>
                                    <DockPanel MinWidth="32" HorizontalAlignment="Center">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Name="CPUTemp"
                                            Text="5°C"
                                            FontSize="12"
                                            MinWidth="20" Padding="0,4,0,4" />
                                    </DockPanel>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <Grid Margin="0,0,0,0">
                                        <ui:FontIcon
                                            Width="26"
                                            Height="30"
                                            FontSize="16"
                                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                            Glyph="&#xe9d9;" />
                                        <ui:ProgressRing
                                            Width="30"
                                            Height="30"
                                            StrokeThickness="2"
                                            Name="CPULoadRing"
                                            d:Value="50"
                                            IsIndeterminate="False" />
                                    </Grid>
                                    <DockPanel MinWidth="32" HorizontalAlignment="Center">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Name="CPULoad"
                                            Text="10%"
                                            FontSize="12"
                                            MinWidth="20" Padding="0,4,0,4" />
                                    </DockPanel>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <Grid Margin="0,0,0,0">
                                        <ui:FontIcon
                                            Width="26"
                                            Height="30"
                                            FontSize="16"
                                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                            Glyph="&#xe950;" />
                                    </Grid>
                                    <DockPanel MinWidth="32" HorizontalAlignment="Center">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Name="CPUMemory"
                                            Text="5GB"
                                            FontSize="12"
                                            MinWidth="20" Padding="0,4,0,4" />
                                    </DockPanel>
                                </StackPanel>
                            </ikw:SimpleStackPanel>
                        </Grid>
                    </StackPanel>
                    <StackPanel
                        Grid.Column="2"
                        Margin="0,0,0,0"                    
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height=".8*" />
                                <RowDefinition Height="2*" />
                            </Grid.RowDefinitions>
                            <Grid
                                Grid.Row="0"
                                Grid.Column="0">
                                <Border
                                    Padding="0,4,0,4"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    CornerRadius="{DynamicResource ControlCornerRadius}">
                                    <TextBlock
                                        Name="GPUName"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Text="GPU" FontStretch="SemiCondensed" />
                                </Border>
                            </Grid>
                            <ikw:SimpleStackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                Spacing="10"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Grid Margin="0,0,0,0">
                                        <ui:FontIcon
                                            Width="26"
                                            Height="30"
                                            FontSize="16"
                                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                            Glyph="&#xe945;" />
                                    </Grid>
                                    <DockPanel MinWidth="32" HorizontalAlignment="Center">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Name="GPUPower"
                                            Text="10W"
                                            FontSize="12"
                                            MinWidth="20" Padding="0,4,0,4" />
                                    </DockPanel>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <Grid Margin="0,0,0,0">
                                        <!--<ui:FontIcon
                                            Width="26"
                                            Height="30"
                                            FontSize="24"
                                            FontFamily="{DynamicResource FluentSystemIcons}"
                                            Glyph="&#xF059;" />-->
                                        <ui:FontIcon
                                            Width="26"
                                            Height="30"
                                            FontSize="16"
                                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                            Glyph="&#xe9ca;" />
                                    </Grid>
                                    <DockPanel MinWidth="32" HorizontalAlignment="Center">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Name="GPUTemp"
                                            Text="5°C"
                                            FontSize="12"
                                            MinWidth="20" Padding="0,4,0,4" />
                                    </DockPanel>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <Grid Margin="0,0,0,0">
                                        <ui:FontIcon
                                            Width="26"
                                            Height="30"
                                            FontSize="16"
                                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                            Glyph="&#xf211;" />
                                        <ui:ProgressRing
                                            Width="30"
                                            Height="30"
                                            StrokeThickness="2"
                                            Name="GPULoadRing"
                                            d:Value="50"
                                            IsIndeterminate="False" />
                                    </Grid>
                                    <DockPanel MinWidth="32" HorizontalAlignment="Center">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Text="10%"
                                            Name="GPULoad"
                                            FontSize="12"
                                            MinWidth="20" Padding="0,4,0,4" />
                                    </DockPanel>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <Grid Margin="0,0,0,0">
                                        <ui:FontIcon
                                            Width="26"
                                            Height="30"
                                            FontSize="16"
                                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                            Glyph="&#xe950;" />
                                    </Grid>
                                    <DockPanel MinWidth="32" HorizontalAlignment="Center">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Name="GPUMemory"
                                            Text="5GB"
                                            FontSize="12"
                                            MinWidth="20" Padding="0,4,0,4" />
                                    </DockPanel>
                                </StackPanel>
                            </ikw:SimpleStackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </DockPanel>
        <DockPanel
            Grid.Row="2"
            VerticalAlignment="Stretch">
        <ui:NavigationView
            Name="navView"
            Margin="0,0,0,0"
            BackRequested="navView_BackRequested"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="{Binding ElementName=ContentFrame, Path=CanGoBack, Mode=OneWay}"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            ItemInvoked="navView_ItemInvoked"
            Loaded="navView_Loaded"
            PaneDisplayMode="Top"
            SelectionFollowsFocus="Enabled"
            Style="{StaticResource NavigationViewStyle1}">

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem IsEnabled="False">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon
                            Name="QTLB"
                            Margin="-6,0,0,0"
                            FontFamily="PromptFont"
                            FontSize="22"
                            Glyph="&#x2198;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem
                    Name="navHome"
                    Content="{l:Static resx:Resources.QuickHomePage_Title}"
                    FontSize="12"
                    Style="{StaticResource NavigationViewItemStyle1}"
                    Tag="QuickHomePage">
                    <ui:NavigationViewItem.Icon>
                            <ui:FontIcon 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                Glyph="&#xE80F;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem
                    Name="navDevice"
                    Content="{l:Static resx:Resources.QuickDevicePage_Title}"
                    FontSize="12"
                    Style="{StaticResource NavigationViewItemStyle1}"
                    Tag="QuickDevicePage">
                    <ui:NavigationViewItem.Icon>
                            <ui:FontIcon 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                Glyph="&#xE70A;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem
                    Name="navProfiles"
                    Content="{l:Static resx:Resources.QuickProfilesPage_Title}"
                    FontSize="12"
                    Style="{StaticResource NavigationViewItemStyle1}"
                    Tag="QuickProfilesPage">
                    <ui:NavigationViewItem.Icon>
                            <ui:FontIcon 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                Glyph="&#xE77B;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem
                    Name="navOverlay"
                    Content="{l:Static resx:Resources.QuickOverlayPage_Title}"
                    FontSize="12"
                    Style="{StaticResource NavigationViewItemStyle1}"
                    Visibility="Collapsed">
                    <ui:NavigationViewItem.Icon>
                            <ui:FontIcon 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Glyph="&#xE78B;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem
                    Name="navApplications"
                    Content="{l:Static resx:Resources.QuickApplicationsPage_Title}"
                    FontSize="12"
                    Style="{StaticResource NavigationViewItemStyle1}"
                    Tag="QuickApplicationsPage">
                    <ui:NavigationViewItem.Icon>
                            <ui:FontIcon 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                Glyph="&#xE71D;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem IsEnabled="False">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon
                            Name="QTRB"
                            Margin="-6,0,0,0"
                            FontFamily="PromptFont"
                            FontSize="22"
                            Glyph="&#x2199;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!--
                <ui:NavigationViewItem
                    Name="navKeyboard"
                    Tag="QuickKeyboardPage"
                    Visibility="{Binding QuickKeyboardVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    <ui:NavigationViewItem.Content>
                        <ui:FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE765;" />
                    </ui:NavigationViewItem.Content>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem
                    Name="navTrackpad"
                    IsEnabled="False"
                    Tag="QuickTrackpadPage"
                    Visibility="{Binding QuickTrackpadVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    <ui:NavigationViewItem.Content>
                        <ui:FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xEFA5;" />
                    </ui:NavigationViewItem.Content>
                </ui:NavigationViewItem>
                -->
            </ui:NavigationView.MenuItems>

            <Grid>
                <ui:CommandBar x:Name="Control1" DefaultLabelPosition="Collapsed">
                    <ui:CommandBar.PrimaryCommands>
                        <ui:AppBarButton Click="QuicKeyboard_Click">
                            <ui:AppBarButton.Icon>
                                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.KeyboardClassic}" />
                            </ui:AppBarButton.Icon>
                        </ui:AppBarButton>

                        <ui:AppBarSeparator />

                        <!--
                        <ui:AppBarElementContainer VerticalContentAlignment="Stretch">
                            <ui:DropDownButton
                                Margin="0,6,0,6"
                                VerticalAlignment="Stretch"
                                Background="Transparent"
                                BorderBrush="Transparent">
                                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.PowerButton}" />
                            </ui:DropDownButton>
                        </ui:AppBarElementContainer>
                        -->

                        <!--
                        <ui:AppBarButton Click="QuickTrackpad_Click">
                            <ui:AppBarButton.Icon>
                                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Touchpad}" />
                            </ui:AppBarButton.Icon>
                        </ui:AppBarButton>

                        <ui:AppBarSeparator />
                        -->

                        <ui:AppBarButton Click="QuickGoBack_Click">
                            <ui:AppBarButton.Icon>
                                <ui:FontIcon FontSize="10" Icon="{x:Static ui:SegoeFluentIcons.Back}" />
                            </ui:AppBarButton.Icon>
                        </ui:AppBarButton>
                    </ui:CommandBar.PrimaryCommands>
                </ui:CommandBar>

                <ui:ContentDialog Name="ContentDialog" d:Visibility="Collapsed" />
                <ui:ScrollViewerEx
                    x:Name="scrollViewer"
                    Margin="0,48,0,4"
                    PanningMode="VerticalFirst">
                        <ui:Frame Name="ContentFrame" />
                </ui:ScrollViewerEx>
                <Separator
                    Margin="0,0,0,0"
                    VerticalAlignment="Bottom"
                    Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                    Opacity="0.2" />
            </Grid>
        </ui:NavigationView>
        </DockPanel>
    </Grid>
</common:GamepadWindow>