<Page
    x:Class="HandheldCompanion.Views.QuickPages.QuickProfilesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:l="clr-namespace:HandheldCompanion.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:HandheldCompanion.Properties"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:viewmodels="clr-namespace:HandheldCompanion.ViewModels"
    Name="QuickProfiles"
    Title="{l:Static resx:Resources.QuickProfilesPage_Title}"
    d:Background="Black"
    d:DataContext="{d:DesignInstance Type=viewmodels:QuickProfilesPageViewModel}"
    d:DesignHeight="2000"
    d:DesignWidth="640"
    KeepAlive="True"
    mc:Ignorable="d">

    <ikw:SimpleStackPanel Margin="0,6,0,6" Spacing="6">

        <!--  Header  -->


        <Grid Name="StackProfileToggle">
            <!--  Header  -->
            <Expander HorizontalAlignment="Stretch" d:IsExpanded="true" IsExpanded="False">
                <Expander.Header>
                    <Border Padding="0,0,12,0" CornerRadius="{DynamicResource ControlCornerRadius}">
                        <DockPanel Margin="0,12,12,12">
                            <Image
                                Name="ProfileIcon"
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Left" />

                            <ikw:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                        Name="ProcessName"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{l:Static resx:Resources.QuickProfilesPage_Waiting}" />
                                <TextBlock
                                        Name="ProcessPath"
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        TextWrapping="NoWrap" />
                            </ikw:SimpleStackPanel>
                        </DockPanel>
                    </Border>

                </Expander.Header>

                <ikw:SimpleStackPanel Spacing="6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.2*" MinWidth="80" />
                        </Grid.ColumnDefinitions>

                        <DockPanel Margin="0">
                            <ui:FontIcon
                                Height="40"
                                HorizontalAlignment="Center"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Glyph="&#xE7EE;" />

                            <ikw:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{l:Static resx:Resources.ProfilesPage_EnableProfile}" />
                                <DockPanel>
                                    <TextBlock
                                        Name="CurrentProfile"
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{l:Static resx:Resources.QuickProfilesPage_CurrentProfile}"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        Name="CurrentProfileName"
                                        Margin="2,0,0,0"
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{l:Static resx:Resources.QuickProfilesPage_CurrentProfileDefault}"
                                        TextWrapping="Wrap" />
                                </DockPanel>
                            </ikw:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch
                            Name="ProfileToggle"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            IsEnabled="False"
                            Style="{DynamicResource InvertedToggleSwitchStyle}"
                            Toggled="ProfileToggle_Toggled" />
                    </Grid>

                    <!--  Separator  -->
                    <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                    <!--  Sub Profiles  -->
                    <Grid
                        Name="SubProfilesBorder"
                        d:Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="4*" />
                        </Grid.ColumnDefinitions>
                        <DockPanel>
                            <ui:FontIcon
                                Height="40"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                Glyph="&#xE81E;" />
                            <ikw:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_SubProfiles}" />
                                <TextBlock
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{l:Static resx:Resources.QuickProfilesPage_SubProfilesDesc}"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                        </DockPanel>
                        <DockPanel Grid.Column="1" Margin="12,0,0,0">
                            <ComboBox
                                Name="cb_SubProfiles"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                SelectionChanged="cb_SubProfiles_SelectionChanged" />
                        </DockPanel>
                    </Grid>

                </ikw:SimpleStackPanel>
            </Expander>
        </Grid>

        <ikw:SimpleStackPanel Name="GridProfile" Spacing="6">
            <ikw:SimpleStackPanel Spacing="6">
                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_PowerSettings}" Visibility="Collapsed" />

                <!--  Separator  -->
                <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" Visibility="Collapsed" />

                <Expander d:IsExpanded="true" IsExpanded="False">
                    <Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <DockPanel Margin="0,12,0,12">
                                <ui:FontIcon
                                    Height="40"
                                    HorizontalAlignment="Center"
                                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                    Glyph="&#xe945;" />
                                <ikw:SimpleStackPanel 
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_PowerPreset}" />
                                    <DockPanel>
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.QuickProfilesPage_CurrentProfile}"
                                            TextWrapping="Wrap" />
                                        <TextBlock
                                            Margin="2,0,0,0"
                                            Name="SelectedPowerProfileName"
                                            TextWrapping="Wrap"
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.PowerProfileDefaultName}" />
                                    </DockPanel>
                                </ikw:SimpleStackPanel>
                                <DockPanel Width="30" HorizontalAlignment="Right">
                                    <ui:FontIcon
                                        Name="PowerPresetIcon"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                        Glyph="&#xe95f;" RenderTransformOrigin="0.5,0.5">
                                        <ui:FontIcon.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="-135"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </ui:FontIcon.RenderTransform>
                                    </ui:FontIcon>
                                </DockPanel>
                            </DockPanel>
                        </Grid>

                    </Expander.Header>

                    <ikw:SimpleStackPanel Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <DockPanel Margin="0,0,12,6">
                                    <ui:FontIcon
                                        VerticalAlignment="Center"
                                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                        Glyph="&#xe95f;" RenderTransformOrigin="0.5,0.5">
                                        <ui:FontIcon.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="-135"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </ui:FontIcon.RenderTransform>
                                    </ui:FontIcon>
                                    <TextBlock Margin="6,0,0,0" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center" Text="Plugged In" />
                                </DockPanel>
                                <ComboBox
                                    Grid.Row="1"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Name="ProfilePluggedIn" SelectionChanged="ProfilePluggedIn_SelectionChanged"></ComboBox>
                            </Grid>
                            <!--  Separator  -->
                            <Separator Grid.Column="1" Margin="0" Background="Transparent" />
                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <DockPanel Margin="0,0,12,6">
                                    <ui:FontIcon
                                        VerticalAlignment="Center"
                                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                        Glyph="&#xe83f;">
                                    </ui:FontIcon>
                                    <TextBlock Margin="6,0,0,0" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center" Text="On Battery" />
                                </DockPanel>
                                <ComboBox
                                    Grid.Row="1"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Name="ProfileOnBattery" SelectionChanged="ProfileOnBattery_SelectionChanged"></ComboBox>
                            </Grid>
                        </Grid>

                        <!--  Separator  -->
                        <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />
                        <ikw:SimpleStackPanel Spacing="6">
                            <DockPanel Margin="0,0,12,16">
                                <ikw:SimpleStackPanel Margin="0,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_CreatePowerProfile}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{l:Static resx:Resources.ProfilesPage_PowerPresetDesc}"
                                        TextWrapping="Wrap" />
                                </ikw:SimpleStackPanel>
                            </DockPanel>
                            <ikw:SimpleStackPanel Name="ProfileStack" Spacing="16" />
                            <!--  Separator  -->
                            <Separator Margin="-16,12,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <!--<ColumnDefinition Width="6*" />-->
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{l:Static resx:Resources.ProfilesPage_CreatePowerProfile}" />
                                <Button
                                    Name="Button_PowerSettings_Create"
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Click="Button_PowerSettings_Create_Click"
                                    Style="{DynamicResource AccentButtonStyle}">
                                    <!--<TextBlock Text="{l:Static resx:Resources.ProfilesPage_CreatePowerProfile}" />-->
                                    <TextBlock Text="{l:Static resx:Resources.ProfilesPage_CreatePowerProfileButton}" />
                                </Button>

                            </Grid>
                        </ikw:SimpleStackPanel>
                    </ikw:SimpleStackPanel>
                </Expander>

                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{l:Static resx:Resources.OverlayPage_OverlayDisplayLevel}" Visibility="Collapsed" />
                <Expander Visibility="Collapsed" HorizontalAlignment="Stretch" d:IsExpanded="false" IsExpanded="True">
                    <Expander.Header>
                        <Grid></Grid>
                    </Expander.Header>
                    <ikw:SimpleStackPanel Spacing="6">
                        <ikw:SimpleStackPanel
                            Spacing="6" 
                            Visibility="{Binding ElementName=comboBoxOSDLevel, Path=SelectedIndex, Converter={StaticResource IndexToVisibilityConverter}, ConverterParameter=1|2|3|4}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <DockPanel>
                                    <ikw:SimpleStackPanel VerticalAlignment="Center">
                                        <TextBlock 
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            VerticalAlignment="Center"
                                            Text="Orientation" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>

                                <ComboBox
                                    Name="comboBoxDisplayOrientation"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    IsReadOnly="True" SelectionChanged="comboBoxDisplayOrientation_SelectionChanged">

                                    <ComboBoxItem Content="Horizontal" />
                                    <ComboBoxItem Content="Vertical" />
                                </ComboBox>
                            </Grid>
                        </ikw:SimpleStackPanel>
                        <ikw:SimpleStackPanel Spacing="6" Visibility="{Binding ElementName=comboBoxOSDLevel, Path=SelectedIndex, Converter={StaticResource IndexToVisibilityConverter}, ConverterParameter=4}">
                            <!--  Separator  -->
                            <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>

                                <DockPanel>
                                    <ikw:SimpleStackPanel VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.OverlayPage_TimeLevel}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.OverlayPage_TimeLevelDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>

                                <ComboBox
                                    Name="comboBoxTimeDisplayLevel"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    IsReadOnly="True" SelectionChanged="comboBoxTimeOSDLevel_SelectionChanged">

                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Disabled}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Minimal}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Full}" />
                                </ComboBox>
                            </Grid>

                            <!--  Separator  -->
                            <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>

                                <DockPanel>
                                    <ikw:SimpleStackPanel VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.OverlayPage_FPSLevel}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.OverlayPage_FPSLevelDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>

                                <ComboBox
                                    Name="comboBoxFPSDisplayLevel"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    IsReadOnly="True" SelectionChanged="comboBoxFPSDisplayLevel_SelectionChanged">

                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Disabled}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Minimal}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Full}" />
                                </ComboBox>
                            </Grid>

                            <!--  Separator  -->
                            <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>

                                <DockPanel>
                                    <ikw:SimpleStackPanel VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.OverlayPage_CPULevel}" />
                                        <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{l:Static resx:Resources.OverlayPage_CPULevelDesc}"
                                        TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>

                                <ComboBox
                                    Name="comboBoxCPUDisplayLevel"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    IsReadOnly="True" SelectionChanged="comboBoxCPUDisplayLevel_SelectionChanged">

                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Disabled}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Minimal}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Full}" />
                                </ComboBox>
                            </Grid>

                            <!--  Separator  -->
                            <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>

                                <DockPanel>
                                    <ikw:SimpleStackPanel Margin="0,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.OverlayPage_RAMLevel}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.OverlayPage_RAMLevelDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>

                                <ComboBox
                                    Name="comboBoxRAMDisplayLevel"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    IsReadOnly="True" SelectionChanged="comboBoxRAMDisplayLevel_SelectionChanged">

                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Disabled}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Minimal}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Full}" />
                                </ComboBox>
                            </Grid>

                            <!--  Separator  -->
                            <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>

                                <DockPanel>
                                    <ikw:SimpleStackPanel Margin="0,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.OverlayPage_GPULevel}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.OverlayPage_GPULevelDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>

                                <ComboBox
                                    Name="comboBoxGPUDisplayLevel"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    IsReadOnly="True" SelectionChanged="comboBoxGPUDisplayLevel_SelectionChanged">

                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Disabled}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Minimal}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Full}" />
                                </ComboBox>
                            </Grid>

                            <!--  Separator  -->
                            <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>

                                <DockPanel>
                                    <ikw:SimpleStackPanel Margin="0,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.OverlayPage_VRAMLevel}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.OverlayPage_VRAMLevelDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>

                                <ComboBox
                                    Name="comboBoxVRAMDisplayLevel"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    IsReadOnly="True" SelectionChanged="comboBoxVRAMDisplayLevel_SelectionChanged">

                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Disabled}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Minimal}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Full}" />
                                </ComboBox>
                            </Grid>

                            <!--  Separator  -->
                            <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>

                                <DockPanel>
                                    <ikw:SimpleStackPanel Margin="0,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.OverlayPage_BATTLevel}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.OverlayPage_BATTLevelDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>

                                <ComboBox
                                    Name="comboBoxBATTDisplayLevel"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    IsReadOnly="True" SelectionChanged="comboBoxBATTDisplayLevel_SelectionChanged">

                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Disabled}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Minimal}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayCustomLevel_Full}" />
                                </ComboBox>
                            </Grid>
                        </ikw:SimpleStackPanel>
                    </ikw:SimpleStackPanel>
                </Expander>


                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_MotionControlSettings}" Visibility="Collapsed" />
                <Expander
                    HorizontalAlignment="Stretch"
                    d:IsExpanded="true"
                    IsExpanded="False">
                    <Expander.Header>
                        <DockPanel Margin="0,12,12,12">
                            <ui:FontIcon
                                Height="40"
                                HorizontalAlignment="Center"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Glyph="&#xE8B4;" />

                            <ikw:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_MotionControlSettings}" />
                                <TextBlock
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{l:Static resx:Resources.ProfilesPage_MotionControlSettingsDesc}"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                        </DockPanel>
                    </Expander.Header>

                    <Expander.Content>
                        <ikw:SimpleStackPanel Margin="0,-10,0,-4" Spacing="6">

                            <!--  Controller layout  -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_ControllerLayout}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="Enable controller layout"
                                        TextWrapping="Wrap" />
                                </StackPanel>

                                <ui:ToggleSwitch
                                    Name="Toggle_ControllerLayout"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource InvertedToggleSwitchStyle}"
                                    Toggled="Toggle_ControllerLayout_Toggled" />
                            </Grid>

                            <!--  Separator  -->
                            <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                            <!--  Output device  -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{l:Static resx:Resources.ProfilesPage_StyleofOutput}"
                                        ToolTip="{l:Static resx:Resources.ProfilesPage_StyleofOutputTooltip}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{l:Static resx:Resources.ProfilesPage_UMCSelectionRightLeftDesc}"
                                        TextWrapping="Wrap" />
                                </StackPanel>

                                <ComboBox
                                    Name="cB_Output"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    SelectionChanged="cB_Output_SelectionChanged" />
                            </Grid>

                            <ikw:SimpleStackPanel Spacing="6" Visibility="{Binding ElementName=cB_Output, Path=SelectedIndex, Converter={StaticResource IndexToVisibilityConverter}, ConverterParameter=1|2|3|4|5}">

                                <!--  Separator  -->
                                <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                                <!--  Style of input  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="6*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{l:Static resx:Resources.ProfilesPage_StyleofInput}"
                                            ToolTip="{l:Static resx:Resources.ProfilesPage_StyleofInputTooltip}" />
                                        <TextBlock
                                            Name="Text_InputHint"
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.ProfilesPage_StyleofInputTooltip}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>

                                    <ComboBox
                                        Name="cB_Input"
                                        Grid.Column="1"
                                        Margin="12,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        SelectionChanged="cB_Input_SelectionChanged" />
                                </Grid>

                                <!--  Separator  -->
                                <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                                <!--  Motion activator  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="6*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Vertical">
                                        <TextBlock
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{l:Static resx:Resources.ProfilesPage_UMCMotionOnOff}"
                                            ToolTip="{l:Static resx:Resources.ProfilesPage_StyleofOutputTooltip}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.ProfilesPage_UMCMotionOnOffDesc}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>

                                    <ComboBox
                                        Name="cB_UMC_MotionDefaultOffOn"
                                        Grid.Column="1"
                                        Margin="12,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        SelectionChanged="cB_UMC_MotionDefaultOffOn_SelectionChanged">
                                        <ComboBoxItem Content="{l:Static resx:Resources.ProfilesPage_UMCMotionOff}" />
                                        <ComboBoxItem Content="{l:Static resx:Resources.ProfilesPage_UMCMotionOn}" />
                                        <ComboBoxItem Content="{l:Static resx:Resources.ProfilesPage_UMCMotionToggle}" />
                                    </ComboBox>
                                </Grid>

                                <Separator Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                                <!--  Motion activator  -->
                                <ui:ItemsRepeater
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    ItemsSource="{Binding HotkeysList}">
                                    <ui:ItemsRepeater.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="10*" />
                                                    <ColumnDefinition Width="45" />
                                                </Grid.ColumnDefinitions>

                                                <ToggleButton
                                                    Height="41"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Command="{Binding DefineButtonCommand}"
                                                    IsChecked="{Binding IsListening, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">

                                                    <ToggleButton.Resources>
                                                        <Style BasedOn="{StaticResource {x:Type ToggleButton}}" TargetType="ToggleButton">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsExecuted}" Value="True">
                                                                    <DataTrigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation
                                                                                    AutoReverse="True"
                                                                                    RepeatBehavior="1x"
                                                                                    Storyboard.TargetProperty="Opacity"
                                                                                    From="1.0"
                                                                                    To="0.0"
                                                                                    Duration="0:0:0.125" />
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </DataTrigger.EnterActions>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ToggleButton.Resources>

                                                    <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="6">
                                                        <ui:ItemsRepeater ItemsSource="{Binding ButtonGlyphs}">
                                                            <ui:ItemsRepeater.Style>
                                                                <Style TargetType="ui:ItemsRepeater">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ButtonGlyphs.Count}" Value="0">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding ButtonGlyphs.Count}">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </ui:ItemsRepeater.Style>

                                                            <ui:ItemsRepeater.Layout>
                                                                <ui:UniformGridLayout
                                                                    ItemsJustification="Center"
                                                                    ItemsStretch="Uniform"
                                                                    MaximumRowsOrColumns="10"
                                                                    MinColumnSpacing="3"
                                                                    Orientation="Horizontal" />
                                                            </ui:ItemsRepeater.Layout>

                                                            <ui:ItemsRepeater.ItemTemplate>
                                                                <DataTemplate>
                                                                    <ui:FontIcon
                                                                        FontFamily="PromptFont"
                                                                        FontSize="24"
                                                                        Glyph="{Binding Glyph, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                                                        <ui:FontIcon.Style>
                                                                            <Style TargetType="ui:FontIcon">
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Foreground, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="{x:Null}">
                                                                                        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                                <Setter Property="Foreground" Value="{Binding Foreground, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                            </Style>
                                                                        </ui:FontIcon.Style>
                                                                    </ui:FontIcon>
                                                                </DataTemplate>
                                                            </ui:ItemsRepeater.ItemTemplate>
                                                        </ui:ItemsRepeater>

                                                        <TextBlock VerticalAlignment="Center" Text="{Binding KeyboardChord, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding KeyboardChord}" Value="">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding KeyboardChord}">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>

                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            Foreground="{DynamicResource NavigationViewSelectionIndicatorForeground}"
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Text="{Binding InputsChordType, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </ikw:SimpleStackPanel>
                                                </ToggleButton>

                                                <Button
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Stretch"
                                                    Command="{Binding EraseButtonCommand}">
                                                    <ui:FontIcon
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                                        Glyph="&#xe75c;" />
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ui:ItemsRepeater.ItemTemplate>
                                </ui:ItemsRepeater>

                                <!--  Separator  -->
                                <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                                <!--  Motion antideadzone  -->
                                <Grid Name="GridAntiDeadzone">
                                    <ikw:SimpleStackPanel Spacing="6">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_UMCAntiDeadzone}" />
                                            <TextBlock
                                                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="{l:Static resx:Resources.ProfilesPage_UMCAntiDeadzoneDesc}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>

                                        <DockPanel ScrollViewer.PanningMode="HorizontalOnly">
                                            <TextBox
                                                Height="32"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                IsReadOnly="True"
                                                Text="{Binding Value, StringFormat={}{0:N0}, ElementName=SliderUMCAntiDeadzone, Mode=OneWay}" />
                                            <Slider
                                                x:Name="SliderUMCAntiDeadzone"
                                                Margin="8,0,0,0"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Center"
                                                AutoToolTipPrecision="0"
                                                IsMoveToPointEnabled="True"
                                                IsSnapToTickEnabled="True"
                                                LargeChange="10"
                                                Maximum="40"
                                                SmallChange="1"
                                                Style="{DynamicResource SliderStyle1}"
                                                TickPlacement="BottomRight"
                                                ToolTip="{Binding Value, StringFormat=N0, RelativeSource={RelativeSource Self}, Mode=OneWay}"
                                                ValueChanged="SliderUMCAntiDeadzone_ValueChanged" />
                                        </DockPanel>
                                    </ikw:SimpleStackPanel>
                                </Grid>

                                <!--  Separator  -->
                                <Separator
                                    Margin="-16,0,-16,0"
                                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                    Visibility="{Binding ElementName=GridAntiDeadzone, Path=Visibility}" />

                                <!--  Gyro Weight  -->
                                <Grid Name="GridGyroWeight">
                                    <ikw:SimpleStackPanel Spacing="6">

                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="Gyrometer weight" />
                                            <TextBlock
                                                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="Modify the gyrometer weight when applied against joystick movements"
                                                TextWrapping="Wrap" />
                                        </StackPanel>

                                        <DockPanel ScrollViewer.PanningMode="HorizontalOnly">
                                            <TextBox
                                                Height="32"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                IsReadOnly="True"
                                                Text="{Binding Value, StringFormat={}{0:N1}, ElementName=Slider_GyroWeight, Mode=OneWay}" />
                                            <Slider
                                                x:Name="Slider_GyroWeight"
                                                Margin="8,0,0,0"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Center"
                                                AutoToolTipPrecision="1"
                                                IsMoveToPointEnabled="True"
                                                IsSnapToTickEnabled="True"
                                                Maximum="2.0"
                                                Minimum="1.0"
                                                Style="{DynamicResource SliderStyle1}"
                                                TickFrequency="0.1"
                                                TickPlacement="BottomRight"
                                                ToolTip="{Binding Value, StringFormat=N1, RelativeSource={RelativeSource Self}, Mode=OneWay}"
                                                ValueChanged="Slider_GyroWeight_ValueChanged" />
                                        </DockPanel>
                                    </ikw:SimpleStackPanel>
                                </Grid>

                                <!--  Separator  -->
                                <Separator
                                    Margin="-16,0,-16,0"
                                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                    Visibility="{Binding ElementName=GridGyroWeight, Path=Visibility}" />

                                <!--  Sensivity  -->
                                <Grid>
                                    <ikw:SimpleStackPanel Spacing="6">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{l:Static resx:Resources.SettingsMode0_Sensitivity}"
                                                ToolTip="{l:Static resx:Resources.ProfilesPage_StyleofOutputTooltip}" />
                                            <TextBlock
                                                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="{l:Static resx:Resources.SettingsMode0_SensitivityDesc}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>

                                        <ikw:SimpleStackPanel Spacing="6">
                                            <StackPanel>
                                                <TextBlock Text="Horizontal sensitivity" />
                                                <DockPanel ScrollViewer.PanningMode="HorizontalOnly">
                                                    <TextBox
                                                        Height="32"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        HorizontalContentAlignment="Center"
                                                        IsReadOnly="True"
                                                        Text="{Binding Value, StringFormat={}{0:N1}, ElementName=SliderSensitivityX, Mode=OneWay}" />
                                                    <Slider
                                                        x:Name="SliderSensitivityX"
                                                        Margin="8,0,0,0"
                                                        HorizontalAlignment="Stretch"
                                                        VerticalAlignment="Center"
                                                        AutoToolTipPrecision="1"
                                                        IsMoveToPointEnabled="True"
                                                        IsSnapToTickEnabled="True"
                                                        LargeChange="0.1"
                                                        Maximum="3.0"
                                                        Minimum="0.1"
                                                        SmallChange="0.1"
                                                        Style="{DynamicResource SliderStyle1}"
                                                        TickFrequency="0.1"
                                                        TickPlacement="BottomRight"
                                                        ToolTip="{Binding Value, StringFormat=N1, RelativeSource={RelativeSource Self}, Mode=OneWay}"
                                                        ValueChanged="SliderSensitivityX_ValueChanged"
                                                        Value="1" />
                                                </DockPanel>
                                            </StackPanel>

                                            <StackPanel>
                                                <TextBlock Text="Vertical sensitivity" />
                                                <DockPanel ScrollViewer.PanningMode="HorizontalOnly">
                                                    <TextBox
                                                        Height="32"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        HorizontalContentAlignment="Center"
                                                        IsReadOnly="True"
                                                        Text="{Binding Value, StringFormat={}{0:N1}, ElementName=SliderSensitivityY, Mode=OneWay}" />
                                                    <Slider
                                                        x:Name="SliderSensitivityY"
                                                        Margin="8,0,0,0"
                                                        HorizontalAlignment="Stretch"
                                                        VerticalAlignment="Center"
                                                        AutoToolTipPrecision="1"
                                                        IsMoveToPointEnabled="True"
                                                        IsSnapToTickEnabled="True"
                                                        LargeChange="0.1"
                                                        Maximum="3.0"
                                                        Minimum="0.1"
                                                        SmallChange="0.1"
                                                        Style="{DynamicResource SliderStyle1}"
                                                        TickFrequency="0.1"
                                                        TickPlacement="BottomRight"
                                                        ToolTip="{Binding Value, StringFormat=N1, RelativeSource={RelativeSource Self}, Mode=OneWay}"
                                                        ValueChanged="SliderSensitivityY_ValueChanged"
                                                        Value="1" />
                                                </DockPanel>
                                            </StackPanel>
                                        </ikw:SimpleStackPanel>
                                    </ikw:SimpleStackPanel>
                                </Grid>
                            </ikw:SimpleStackPanel>
                        </ikw:SimpleStackPanel>
                    </Expander.Content>
                </Expander>
            </ikw:SimpleStackPanel>

            <ikw:SimpleStackPanel Spacing="6">
                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="Graphics settings" Visibility="Collapsed" />

                <Expander
                    HorizontalAlignment="Stretch"
                    d:IsExpanded="true"
                    IsExpanded="False">
                    <Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>

                            <DockPanel Margin="0,12,12,12">
                                <ui:FontIcon
                                    Height="40"
                                    HorizontalAlignment="Center"
                                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                    Glyph="&#xf211;" />

                                <ikw:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_GraphicsSettings}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{l:Static resx:Resources.ProfilesPage_GraphicsSettingsDesc}"
                                        TextWrapping="Wrap" />
                                </ikw:SimpleStackPanel>
                            </DockPanel>
                        </Grid>
                    </Expander.Header>

                    <ikw:SimpleStackPanel Margin="0,-10,0,-4" Spacing="6">
                        <ikw:SimpleStackPanel Spacing="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="7*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>
                                <DockPanel>
                                    <ikw:SimpleStackPanel VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.OverlayPage_OverlayDisplayLevel}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.OverlayPage_OverlayDisplayLevelDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>
                                <ui:ToggleSwitch
                                    Name="OnScreenOverlayToggle"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource InvertedToggleSwitchStyle}"
                                    Toggled="OnScreenOverlayToggle_Toggled" />
                                <ComboBox
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    Name="comboBoxOSDLevel"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed"
                                    IsReadOnly="True"
                                    SelectionChanged="comboBoxOSDLevel_SelectionChanged">

                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayLevel_Disabled}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayLevel_Minimal}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayLevel_Extended}" IsEnabled="{Binding IsRunningLHM, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayLevel_Full}" IsEnabled="{Binding IsRunningLHM, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayLevel_Custom}" />
                                    <ComboBoxItem Content="{l:Static resx:Resources.OverlayPage_OverlayDisplayLevel_External}" />
                                </ComboBox>
                            </Grid>

                            <!--  Separator  -->
                            <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                        </ikw:SimpleStackPanel>
                        <!--  Framerate Limit  -->
                        <ikw:SimpleStackPanel
                            Name="StackProfileFramerate"
                            IsEnabled="False"
                            Spacing="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="7*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>
                                <DockPanel>
                                    <ikw:SimpleStackPanel VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_FramerateLimit}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.ProfilesPage_FramerateLimitDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>
                                <ComboBox
                                    Name="cB_Framerate"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    SelectionChanged="cB_Framerate_SelectionChanged" />
                            </Grid>

                            <!--  Separator  -->
                            <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                        </ikw:SimpleStackPanel>

                        <!--  GPU Scaling  -->
                        <ikw:SimpleStackPanel Name="StackProfileGPUScaling" Spacing="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="7*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>

                                <ikw:SimpleStackPanel VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_GPUScaling}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{l:Static resx:Resources.ProfilesPage_GPUScalingDesc}"
                                        TextWrapping="Wrap" />
                                </ikw:SimpleStackPanel>

                                <ui:ToggleSwitch
                                    Name="GPUScalingToggle"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource InvertedToggleSwitchStyle}"
                                    Toggled="GPUScaling_Toggled" />
                            </Grid>

                            <!--  Separator  -->
                            <Separator Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" Visibility="{Binding ElementName=GPUScalingToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}" />

                            <StackPanel d:Visibility="Visible" Visibility="{Binding ElementName=GPUScalingToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="6*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>

                                    <ikw:SimpleStackPanel VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_ScalingMode}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.ProfilesPage_GPUScalingDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>

                                    <ComboBox
                                        Name="GPUScalingComboBox"
                                        Grid.Column="1"
                                        Margin="12,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        SelectionChanged="GPUScalingComboBox_SelectionChanged">
                                        <ComboBoxItem Content="{l:Static resx:Resources.ProfilesPage_ScalingMode_PreserveAspectRatio}" />
                                        <ComboBoxItem Content="{l:Static resx:Resources.ProfilesPage_ScalingMode_FullPanel}" />
                                        <ComboBoxItem Content="{l:Static resx:Resources.ProfilesPage_ScalingMode_Center}" IsEnabled="{Binding ElementName=RSRToggle, Path=IsOn, Converter={StaticResource InvertBooleanConverter}}" />
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </ikw:SimpleStackPanel>

                        <!--  Separator  -->
                        <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                        <!--  RSR (AMD)  -->
                        <ikw:SimpleStackPanel
                            Name="StackProfileRSR"
                            d:Background="Red"
                            d:Visibility="Visible"
                            Spacing="6"
                            Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="5*" />
                                </Grid.ColumnDefinitions>

                                <ikw:SimpleStackPanel VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_RSR}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{l:Static resx:Resources.ProfilesPage_RSRDesc}"
                                        TextWrapping="Wrap" />
                                </ikw:SimpleStackPanel>

                                <ui:ToggleSwitch
                                    Name="RSRToggle"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    IsEnabled="{Binding ElementName=GPUScalingToggle, Path=IsOn}"
                                    Style="{DynamicResource InvertedToggleSwitchStyle}"
                                    Toggled="RSRToggle_Toggled" />
                            </Grid>

                            <Separator Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" Visibility="{Binding ElementName=RSRToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}" />

                            <DockPanel
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                d:Visibility="Visible"
                                ScrollViewer.PanningMode="HorizontalOnly"
                                Visibility="{Binding ElementName=RSRToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                                <TextBox
                                    Height="32"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    IsReadOnly="True"
                                    Text="{Binding Value, StringFormat={}{0:N0} %, ElementName=RSRSlider, Mode=OneWay}" />
                                <Slider
                                    x:Name="RSRSlider"
                                    VerticalAlignment="Center"
                                    AutoToolTipPrecision="0"
                                    IsMoveToPointEnabled="True"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="5"
                                    Maximum="100"
                                    Minimum="0"
                                    SmallChange="1"
                                    Style="{DynamicResource SliderStyle1}"
                                    TickFrequency="5"
                                    TickPlacement="BottomRight"
                                    ToolTip="{Binding Value, StringFormat=N0, RelativeSource={RelativeSource Self}, Mode=OneWay}"
                                    ValueChanged="RSRSlider_ValueChanged" />
                            </DockPanel>
                        </ikw:SimpleStackPanel>

                        <!--  Separator  -->
                        <Separator
                            Margin="-16,0,-16,0"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            Visibility="{Binding ElementName=StackProfileRSR, Path=Visibility}" />

                        <!--  Integer Scaling  -->
                        <ikw:SimpleStackPanel Name="StackProfileIS" Spacing="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="7*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>

                                <ikw:SimpleStackPanel VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_IS}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{l:Static resx:Resources.ProfilesPage_ISDesc}"
                                        TextWrapping="Wrap" />
                                </ikw:SimpleStackPanel>

                                <ui:ToggleSwitch
                                    Name="IntegerScalingToggle"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    IsEnabled="{Binding ElementName=GPUScalingToggle, Path=IsOn}"
                                    Style="{DynamicResource InvertedToggleSwitchStyle}"
                                    Toggled="IntegerScalingToggle_Toggled" />
                            </Grid>

                            <Separator Background="{DynamicResource ExpanderHeaderBackground}" Visibility="{Binding ElementName=IntegerScalingToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}" />

                            <ikw:SimpleStackPanel
                                d:Visibility="Visible"
                                Spacing="6"
                                Visibility="{Binding ElementName=IntegerScalingToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>

                                    <ikw:SimpleStackPanel VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_ResolutionScale}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.ProfilesPage_ResolutionScaleDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>

                                    <ComboBox
                                        Name="IntegerScalingComboBox"
                                        Grid.Column="1"
                                        Margin="12,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        SelectionChanged="IntegerScalingComboBox_SelectionChanged" />
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="12,0,0,0"
                                        d:Visibility="Visible"
                                        Orientation="Horizontal"
                                        Visibility="{Binding ElementName=IntegerScalingComboBox, Path=SelectedIndex, Converter={StaticResource IndexToVisibilityConverter}, ConverterParameter=0}">
                                        <ui:FontIcon
                                            Height="20"
                                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                            Glyph="&#xe7ba;" />
                                        <TextBlock
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.QuickSettingsPage_ResScaleExclusiveFullscreen}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>

                                <Separator Background="{DynamicResource ExpanderHeaderBackground}" Visibility="{Binding ElementName=IntegerScalingTypeGrid, Path=Visibility}" />

                                <Grid
                                    Name="IntegerScalingTypeGrid"
                                    MinHeight="40"
                                    d:Background="Blue">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>

                                    <ikw:SimpleStackPanel VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_ResolutionScaleType}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.ProfilesPage_ResolutionScaleTypeDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>

                                    <ComboBox
                                        Name="IntegerScalingTypeComboBox"
                                        Grid.Column="1"
                                        Margin="12,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        SelectionChanged="IntegerScalingTypeComboBox_SelectionChanged">
                                        <ComboBoxItem Name="IntegerScalingTypeInteger" Content="{l:Static resx:Resources.ProfilesPage_ResolutionScaleTypeInteger}" />
                                        <ComboBoxItem Name="IntegerScalingTypeNearest" Content="{l:Static resx:Resources.ProfilesPage_ResolutionScaleTypeNearest}" />
                                    </ComboBox>
                                </Grid>
                            </ikw:SimpleStackPanel>
                        </ikw:SimpleStackPanel>

                        <!--  Separator  -->
                        <Separator Margin="-16,0,-16,0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

                        <!--  RIS (AMD)  -->
                        <ikw:SimpleStackPanel Name="StackProfileRIS" Spacing="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="5*" />
                                </Grid.ColumnDefinitions>

                                <ikw:SimpleStackPanel VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_ImageSharpening}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{l:Static resx:Resources.ProfilesPage_ImageSharpeningDesc}"
                                        TextWrapping="Wrap" />
                                </ikw:SimpleStackPanel>

                                <ui:ToggleSwitch
                                    Name="RISToggle"
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource InvertedToggleSwitchStyle}"
                                    Toggled="RISToggle_Toggled" />
                            </Grid>

                            <Separator Background="{DynamicResource ExpanderHeaderBackground}" Visibility="{Binding ElementName=RISToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}" />

                            <DockPanel
                                Grid.Column="1"
                                Margin="12,0,0,0"
                                d:Visibility="Visible"
                                ScrollViewer.PanningMode="HorizontalOnly"
                                Visibility="{Binding ElementName=RISToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                                <TextBox
                                    Height="32"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    IsReadOnly="True"
                                    Text="{Binding Value, StringFormat={}{0:N0} %, ElementName=RISSlider, Mode=OneWay}" />
                                <Slider
                                    x:Name="RISSlider"
                                    VerticalAlignment="Center"
                                    AutoToolTipPrecision="0"
                                    IsMoveToPointEnabled="True"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="5"
                                    Maximum="100"
                                    Minimum="0"
                                    SmallChange="1"
                                    Style="{DynamicResource SliderStyle1}"
                                    TickFrequency="5"
                                    TickPlacement="BottomRight"
                                    ToolTip="{Binding Value, StringFormat=N0, RelativeSource={RelativeSource Self}, Mode=OneWay}"
                                    ValueChanged="RISSlider_ValueChanged" />
                            </DockPanel>
                        </ikw:SimpleStackPanel>

                    </ikw:SimpleStackPanel>
                </Expander>
            </ikw:SimpleStackPanel>
        </ikw:SimpleStackPanel>
    </ikw:SimpleStackPanel>
</Page>
